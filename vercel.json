{
  "version": 2,
  "builds": [
    { "src": "backend/api/index.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist/tech-assessment-frontend" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.ts" },
    { "src": "/(.*)", "dest": "frontend/dist/tech-assessment-frontend/index.html" }
  ]
}
